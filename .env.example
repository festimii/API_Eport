# Copy this file to .env and provide secure values for each variable before starting the API.
# Never commit real credentials to version control.

DB_SERVER=your-db-host
DB_NAME=your-database-name
DB_USER=your-db-username
DB_PASSWORD=your-db-password

API_USERNAME=your-api-username
API_PASSWORD=your-strong-password
API_SECRET_KEY=your-random-secret-key
API_TOKEN_EXPIRE_MINUTES=60
